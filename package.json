    "es6"
  ],
  "main": "./lib/draggable.bundle.js",
  "types": "./index.d.ts",
  "scripts": {
    "start": "concurrently \"npm run watch\" \"cd examples && npm i && npm start\"",
    "build": "npm run build:production",
    "watch": "node scripts/watch.js",
    "prepare": "npm run build:development",
    "prepublishOnly": "npm run build:production",
    "format": "prettier --write './src/**/*.{js,json,md,css,scss,ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint './src/**.{ts,tsx}' --fix",
    "esdoc": "esdoc -c esdoc.json",
    "test": "jest",
    "test-ci": "jest --coverage && codecov",
    "build:development": "node scripts/build.js",
    "build:production": "node scripts/build.js --production",
    "serve-vite": "vite",
    "build-vite": "vite build",
    "preview-vite": "vite preview"
  },
  "files": [
    "lib/**/*.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
